import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.Test;

class GamePortfolioTests {

    @Test
    void testPageTitle() {
        String expectedTitle = "Game Portfolio";
        String actualTitle = getPageTitle(); // Метод, що отримує заголовок сторінки
        assertEquals(expectedTitle, actualTitle, "Заголовок сторінки має бути 'Game Portfolio'");
    }

    @Test
    void testGameListNotEmpty() {
        assertFalse(getGameList().isEmpty(), "Список ігор не повинен бути порожнім");
    }

    @Test
    void testGameDetailsLoad() {
        String gameId = "game123"; // Припустимо, що це існуючий ID гри
        assertNotNull(getGameDetails(gameId), "Деталі гри повинні завантажуватись коректно");
    }

    @Test
    void testImagesExistForGames() {
        // Перевірка, чи є зображення для кожної гри
        for (String game : getGameList()) {
            assertTrue(isImagePresent(game), "Для гри '" + game + "' повинно бути зображення.");
        }
    }

    // Фіктивний метод для перевірки наявності зображення для кожної гри (у реальному тестуванні буде перевірка елементів на веб-сторінці)
    private boolean isImagePresent(String game) {
        // Для реального тестування можна використовувати Selenium, щоб перевірити наявність тегу <img> для кожної гри
        return true; // Припустимо, що зображення для кожної гри присутнє
    }

    private String getPageTitle() {
        return "Game Portfolio";
    }

    private java.util.List<String> getGameList() {
        return java.util.Arrays.asList("Game1", "Game2", "Game3");
    }

    private String getGameDetails(String gameId) {
        return gameId.equals("game123") ? "Game Details" : null;
    }
}
