import org.junit.jupiter.api.Test;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

import static org.junit.jupiter.api.Assertions.*;

class GamePortfolioSeleniumTests {

    @Test
    void testPageTitle() {
        // Настроить драйвер Chrome (нужен chromedriver)
        WebDriver driver = new ChromeDriver();
        driver.get("https://alexmegua.github.io/game-portfolio/");

        // Проверка заголовка страницы
        String expectedTitle = "Game Portfolio";
        String actualTitle = driver.getTitle();
        assertEquals(expectedTitle, actualTitle);

        driver.quit();
    }

    @Test
    void testGameListNotEmpty() {
        WebDriver driver = new ChromeDriver();
        driver.get("https://alexmegua.github.io/game-portfolio/");

        // Проверка, что список игр не пустой
        WebElement gameList = driver.findElement(By.id("games-list")); // предполагаемый id
        assertFalse(gameList.getText().isEmpty());

        driver.quit();
    }

    @Test
    void testImagesExistForGames() {
        WebDriver driver = new ChromeDriver();
        driver.get("https://alexmegua.github.io/game-portfolio/");

        // Проверка наличия изображений для каждой игры
        List<WebElement> gameImages = driver.findElements(By.cssSelector(".game-image"));
        assertTrue(gameImages.size() > 0, "На странице должны быть изображения для игр");

        driver.quit();
    }
}
